@if (Request.IsAuthenticated)
{
    string[] infusuario = User.Identity.Name.Split('|'); 
   
   <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@infusuario[0] <span class="caret"></span></a>
         @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            
        } 
        <ul class="dropdown-menu" role="menu">
        <li><a href="#">Perfil</a></li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
        </ul>
    </li>        
     
        
} else {
       <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
   
}
