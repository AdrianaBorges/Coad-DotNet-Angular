@model  COAD.CORPORATIVO.Model.Dto.ClienteDto
@using Coad.GenericCrud.Extensions
@using GenericCrud.ActionResultTools
@{
    ViewBag.Title = "Detalhes do Pedido";
    ViewBag.print = true;
    ViewBag.defer = "defer='defer'";
}

@section breadcrumbs {

