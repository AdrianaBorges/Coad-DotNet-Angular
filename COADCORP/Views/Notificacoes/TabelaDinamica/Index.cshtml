
@Scripts.Render("~/Scripts/appScripts/TabelaDinamica.js")


<div ng-app="appModule">
    <div ng-controller="TabelaDinamicaController">
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-home"></i><a href="index.html"> Home</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-desktop"></i> Tabela Dinâmica
                        </li>
                    </ol>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i>Tabela Dinâmica
                        <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                    Opções
                                        <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right" role="menu">
                                    <li><a href="/TabelaDinamica/Editar?id=">Cadastrar Tabela</a>
                                    </li>
                                    <li><a href="/TabelaDinamica/EditarConfig?id=">Configurar Tabela</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="form-group">
                                @Html.Label("Informe o nome da tabela")
                                <input id="_nometabela" type="text" ng-model="param.nometabela" class="form-control " placeholder="Nome da tabela" autofocus autocomplete="off">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <input type="button" ng-click="listar()" class="btn btn-default" value="Pesquisar">
                </div>
            </div>
            <div class="panel panel-default" ng-show="listatabela">
                <div class="panel-heading">
                    <i class="fa fa-table fa-fw"></i> Lista de Tabelas
                    <div class="pull-right">
                        <div class="btn-group">
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Código
                                </th>
                                <th>Descrição
                                </th>
                                <th>Introdução
                                </th>
                                <th>Inclusão
                                </th>
                                <th>Alteração
                                </th>
                                <th style="text-align: center;">Editar
                                </th>
                                <th style="text-align: center;">Configurar
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in listatabela">
                              <td>{{item.TDC_ID}}</td>
                              <td>{{item.TAB_DESCRICAO}}</td>
                              <td>{{item.TAB_INTRODUCAO}}</td>
                              <td>{{item.TDC_DATA_INCLUSAO}}</td>
                              <td>{{item.TDC_DATA_ALTERA}}</td>
                              <td style="text-align: center;">
                                 <a href="#" ng_click="selecionar('../TabelaDinamica/Editar?id=item.TDC_ID')" title="Editar dados da tabela"><i class="fa fa-calendar"></i></a>
                              </td>
                              <td style="text-align: center;">
                                  <a href="#" ng_click="selecionar('../TabelaDinamica/EditarConfig?id=item.TDC_ID')" title="Editar a configuração da tabela"><i class="fa fa-calendar"></i></a>
                              </td>
                            </tr>
                        </tbody>
                    </table>
                    <hr />
                    <app-pagination request-page="paginaReq" load-function="listar(paginaReq)"></app-pagination>
                </div>
            </div>
        </div>
    </div>
</div>





