@model  COAD.COADGED.Model.DTO.LabelsDTO
@{
    ViewBag.Title = "Edit";
}
@using Coad.GenericCrud.Extensions
    @section breadcrumbs {
    <ol class="breadcrumb">
        <li>@Html.ActionLink("DashBoard","index","Home")</li>
        <li>@Html.ActionLink("Gerenciar Labels","index","Labels")</li>
        <li class="active">Detalhes da Label</li>         
    </ol>
}
<!-- ALT: 23/06/2015 - importando JavaScript específico deste módulo -->
@Scripts.Render("~/Scripts/negocio/COADGED/labels.js")
<div class="form-lg padding" ng-app="appModule">

    <div class="panel panel-default" ng-controller="LabelsController" data-ng-init="read(@ViewBag.labelId)">
            <div class="panel-heading bold head-panel"><span class="glyphicon glyphicon-search icon-panel"></span> Detalhes da Label</div>

            <div class="panel-body">  
                <div app-message></div>               
                <div class="row">
                    <div class="form-group col-lg-1">
                        @Html.Label("ID")
                        @Html.TextBoxFor(model => model.LBL_ID,  new {@class = "form-control", ng_model = "label.LBL_ID", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.LBL_NOME, null, new { app_validation_msg = "erros", @for = "LBL_ID" }) 
                    </div>
                    <div class="form-group col-lg-9">
                        @Html.LabelFor(model => model.LBL_NOME)
                        @Html.TextBoxFor(model => model.LBL_NOME, new {@class = "form-control", ng_model = "label.LBL_NOME", disabled = "disabled"})                 
                    </div>                    
                    <div class="form-group col-lg-9">
                        @Html.LabelFor(model => model.LBL_DESCRICAO)
                        @Html.TextBoxFor(model => model.LBL_DESCRICAO, new {@class = "form-control", ng_model = "label.LBL_DESCRICAO", disabled = "disabled"})                 
                    </div>                    
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.LBL_ATIVO)
                        @Html.DropDownListFor(model => model.LBL_ATIVO, new SelectList(@ViewBag.ativo, "Value", "Text"), null ,new {@class = "form-control", ng_model = "label.LBL_ATIVO", disabled = "disabled" })
                    </div>                    
                </div>
            </div>
            
            <div class="panel-footer">
                <button type="button" onclick="window.location = '@Url.Action("Index")'" class="btn btn-default">Voltar</button>
            </div>
    </div>

</div>
