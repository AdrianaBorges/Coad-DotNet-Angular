@model  COAD.COADGED.Model.DTO.TitulacaoDTO
@{
    ViewBag.Title = "Edit";
}
@using Coad.GenericCrud.Extensions
    @section breadcrumbs {
    <ol class="breadcrumb">
        <li>@Html.ActionLink("DashBoard","index","Home")</li>
        <li>@Html.ActionLink("Gerenciar Titulações","index","Titulacao")</li>
        <li class="active">Detalhes da Titulação</li>         
    </ol>
}
<!-- ALT: 23/06/2015 - importando JavaScript específico deste módulo -->
@Scripts.Render("~/Scripts/negocio/COADGED/titulacao.js")
<div class="form-lg padding" ng-app="appModule">

    <div class="panel panel-default" ng-controller="TitulacaoController" data-ng-init="read(@ViewBag.titulacaoId)">
            <div class="panel-heading bold head-panel"><span class="glyphicon glyphicon-search icon-panel"></span> Detalhes da Titulação</div>

            <div class="panel-body">  
                <div app-message></div>               
                <div class="row">
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.ARE_CONS_ID)
                        @Html.DropDownListFor(model => model.ARE_CONS_ID, new SelectList(@ViewBag.area, "Value", "Text"), null ,new {@class = "form-control", ng_model = "titulacao.ARE_CONS_ID", disabled = "disabled" })
                    </div>
                    <div class="form-group col-lg-1">
                        @Html.Label("ID")
                        @Html.TextBoxFor(model => model.TIT_ID,  new {@class = "form-control", ng_model = "titulacao.TIT_ID", disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.TIT_DESCRICAO, null, new { app_validation_msg = "erros", @for = "TIT_ID" }) 
                    </div>
                    <div class="form-group col-lg-5">
                        @Html.LabelFor(model => model.TIT_ID_REFERENCIA)
                        @Html.DropDownListFor(model => model.TIT_ID_REFERENCIA, new SelectList(@ViewBag.superior, "Value", "Text"), null ,new {@class = "form-control", ng_model = "titulacao.TIT_ID_REFERENCIA", disabled = "disabled" })
                    </div>                    
                    <div class="form-group col-lg-6">
                        @Html.LabelFor(model => model.TIT_DESCRICAO)
                        @Html.TextBoxFor(model => model.TIT_DESCRICAO, new {@class = "form-control", ng_model = "titulacao.TIT_DESCRICAO", disabled = "disabled"})                 
                    </div>                    
                </div>
                <div class="row">
                     <div class="form-group col-lg-3">
                        @Html.LabelFor(model => model.TIT_TIPO)
                        @Html.DropDownListFor(model => model.TIT_TIPO, new SelectList(@ViewBag.tipo, "Value", "Text"), null ,new {@class = "form-control", ng_model = "titulacao.TIT_TIPO", disabled = "disabled" })
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.TIT_ATIVO)
                        @Html.DropDownListFor(model => model.TIT_ATIVO, new SelectList(@ViewBag.ativo, "Value", "Text"), null ,new {@class = "form-control", ng_model = "titulacao.TIT_ATIVO", disabled = "disabled" })
                    </div>                    
                </div>
            </div>
            
            <div class="panel-footer">
                <button type="button" onclick="window.location = '@Url.Action("Index")'" class="btn btn-default">Voltar</button>
            </div>
    </div>

</div>
