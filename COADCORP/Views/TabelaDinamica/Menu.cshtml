@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt_br">
<head>

    <script type="text/javascript">
        // para obter o contexto da aplicação
        var contextPath = "@System.Web.HttpContext.Current.Request.ApplicationPath";
    </script>

    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/themes/base/jquery-ui.css")
    @Styles.Render("~/Content/themes/base/simple-sidebar.css")
    @Styles.Render("~/Content/themes/base/bootstrap-theme.css")
    @Styles.Render("~/Content/themes/base/default.css")
    @Styles.Render("~/Content/themes/base/bootstrap.css")
    @Styles.Render("~/Content/themes/fonts/font-awesome.min.css")
    @Styles.Render("~/Content/themes/base/coadcorp-boostrap.css")

    <script src="@Url.Content("~/Scripts/jquery-1.11.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskMoney.js")" type="text/javascript"></script>

    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/util.js")
    @Scripts.Render("~/Scripts/Angular/angular.min.js")
    @Scripts.Render("~/Scripts/Angular/angular_modules/service_module.js")
    @Scripts.Render("~/Scripts/Angular/angular_modules/directives_module.js")
    @Scripts.Render("~/Scripts/default.js")
    @Scripts.Render("~/Scripts/negocio/notificacao.js")
    @Scripts.Render("~/Scripts/negocio/controllers_plugins/info_cliente.js")
    @Scripts.Render("~/Scripts/Angular/FusionCharts/fusioncharts.js")
    @Scripts.Render("~/Scripts/Angular/FusionCharts/angular-fusioncharts.min.js")
    @Scripts.Render("~/Scripts/js/plugins/tinymce/tinymce.min.js")
    @Scripts.Render("~/Scripts/Angular/angular-sanitize.js")
    @Scripts.Render("~/Scripts/Angular/angular-animate.js")
    @Scripts.Render("~/Scripts/js/plugins/tinymce/tinymce_custom_app.js")
    @Scripts.Render("~/Scripts/js/plugins/tinymce/Tinymce.js")
    @Scripts.Render("~/Scripts/appScripts/TabelaDinamica.js")


    <!-- compatibilidades com ie antigos-->
    @Scripts.Render("~/Scripts/compatibilidades/respond.js")


</head>

<body class="body" ng-app="appModule">
    <div id="wrapper" ng-controller="TabelaDinamicaController" ng-init="carregaTela('@ViewBag.id')" class="@ViewBag.Toggled">

        <div id="sidebar-wrapper" class="no-mobile" style="background-color: #f5f5f5">
            <div class="panel-group">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse1"><span class="fa fa-table"></span>&nbsp;Tabelas Dinâmicas</a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse in">
                        <ul ng-repeat="item in lstTabelas | orderBy:'TAB_DATA_ALTERA'" class="list-group">
                            <li class="list-group-item">
                                <span class="glyphicon glyphicon-arrow-right blue fa-1x" style="font-size: 8px;"></span>
                                <a href="/TabelaDinamica/Menu?_id={{item.TDC_ID}}" style="font-size: 12px;">{{item.TDC_NOME_TABELA}}</a>
                            </li>
                        </ul>
                    </div>
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse2"><span class="glyphicon glyphicon-cog"></span>&nbsp;Simuladores</a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse in">
                        <ul ng-repeat="item in lstSimuladores | orderBy:'TAB_DATA_ALTERA'" class="list-group">
                            <li class="list-group-item">
                                <span class="glyphicon glyphicon-arrow-right blue fa-1x" style="font-size: 8px;"></span>
                                <a href="/TabelaDinamica/Menu?_id={{item.TDC_ID}}" style="font-size: 12px;">{{item.TDC_NOME_TABELA}}</a>
                            </li>
                        </ul>
                    </div>
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse3"><span class="glyphicon glyphicon-question-sign"></span>&nbsp;Perguntas Ferquentes</a>
                        </h4>
                    </div>
                    <div id="collapse3" class="panel-collapse collapse in">
                        <ul class="list-group">
                            <li class="list-group-item"><a href="http://www.coad.com.br/home/simuladorescoad" style="font-size: 12px;" target="_blank">Tabelas Dinâmicas</a></li>
                            <li class="list-group-item"><a href="http://www.coad.com.br/home/simuladorescoad" style="font-size: 12px;" target="_blank">Simulador</a></li>
                            <li class="list-group-item"><a href="http://www.coad.com.br/home/simuladorescoad" style="font-size: 12px;" target="_blank">Sobre</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <img src="~/Images/Banner_News_DIRF_EAD.png" style="padding: 0px; width:200px;" />
            </div>
        </div>


        <div id="page-content-wrapper">
            <div class="container-fluid limit-content">
                @if (TempData["message"] != null)
                {
                    <div>
                        <h2>Notificação</h2>
                        <div class="panel panel-warning">
                            <!-- Default panel contents -->
                            <div class="panel-heading bold head-panel">
                                <span class="glyphicon glyphicon-remove-sign icon-panel"></span>
                                Notificação 
                            </div>
                            <div class="panel-body">
                                <div>@TempData["message"]</div>
                            </div>
                        </div>
                    </div>
                }
                else
                {

                    @Html.Partial("Partials/_SimuladorNovo")
                   
                }
            </div>
        </div>
    </div>
</body>

</html>

