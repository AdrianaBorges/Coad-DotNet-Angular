@using Coad.GenericCrud.Extensions

@{
    ViewBag.Title = "Index";     
}

@Scripts.Render("~/Scripts/appScripts/origem.js")

<div ng-app="appModule">
    <div ng-controller="OrigemController" class="padding content" >
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li>
                            @Html.ActionLink("Home", "index", "Home")
                        </li>
                        <li class="active">
                            <i class="fa fa-desktop"></i>&nbspOrigem Acesso
                        </li>
                    </ol>
                </div>
            </div>
            <div class="panel panel-default">
                <div app-message></div>
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-filter"></span>&nbspFiltros
                    <div class="pull-right">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">Opções<span class="caret"></span></button>
                            <ul class="dropdown-menu pull-right" role="menu">
                                <li><a href="javascript:void(0)" app-post="@Url.Action("Editar")?_org_id=" title="Novo" class="blue">
                                        <span class="glyphicon glyphicon-edit"></span>&nbspNovo
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="form-group">
                                @Html.Label("Informe a descrição")
                                <input id="_ORG_DESCRICAO" type="text" ng-model="param.ORG_DESCRICAO" class="form-control " placeholder="Descrição" autofocus autocomplete="off">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button ng-click="listar()" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>&nbspPesquisar</button>
                </div>
            </div>
            <div class="panel panel-default" ng-show="listaorigem">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-book"></span>&nbspOrigem Acesso
                    <div class="pull-right">
                        <div class="btn-group">
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr class="info">
                                <th  style="text-align: right;">ID</th>
                                <th>Descrição</th>
                                <th style="text-align: center;">Editar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in listaorigem">
                                <td style="text-align: right;">{{item.OAC_ID}}</td>
                                <td>{{item.OAC_DESCRICAO}}</td>
                                <td style="text-align: center;">
                                    <a href="javascript:void(0)" app-post="@Url.Action("Editar")?_org_id={{item.OAC_ID}}" title="Editar" class="blue">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <hr />
                    <app-pagination request-page="paginaReq" load-function="listar(paginaReq)"></app-pagination>
                </div>
            </div>
        </div>
    </div>
</div>


