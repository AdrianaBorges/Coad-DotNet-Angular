                <div ng-show="modalPropostaItem.PST_ID == 2 && 
                     modalPropostaItem.PROPOSTA.TNE_ID != 2">
                    <div>
                        <a href="javascript:void(0);" ng-click="confirmarPagamento(modalPropostaItem)"
