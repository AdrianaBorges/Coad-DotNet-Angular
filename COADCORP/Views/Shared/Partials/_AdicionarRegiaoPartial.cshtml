@model  COAD.CORPORATIVO.Model.Dto.ClienteDto                   
@using COAD.SEGURANCA.Repositorios.Base
   <div app-modal="modal-adicionar-regiao" header="Adicionar Região" size="small">
         
            <div>
                <div class="panel panel-corp">
                    <div class="panel panel-body">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label for="selectRegiao">Região</label> 
                            <select ng-options="reg.RG_ID as reg.RG_DESCRICAO for reg in regioes"
                                    ng-model="$parent.modalCarteiramento.RG_ID" id="selectRegiao1" class="form-control">
                                    <option value="">Selecione</option>
                            </select>
                        </div>
                    </div> 
                   </div>
                
                 <!-- Default panel contents -->
      
                <div class="panel-footer">
                    <button class="btn btn-primary" 
                        app-switch-button="adicionarRegiao()"
                        switch-conf="[{label : 'Adicionar', state : 'run'}, {label : 'Adicionando...', state : 'running', disabled : true}]"
                        switch-var="$parent.buttonAddRegiao"></button>       
                </div>
               </div>
            </div>
        </div>
   